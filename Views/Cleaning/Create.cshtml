@model AMS.Models.CleaningVM

@{
    ViewData["Title"] = "Add a Maintenance";
}

<div class="card">
    <div class="card-header">
        <div class="wrapper-inner-card d-flex justify-content-between align-items-center">
            <h3 class="text-uppercase">Add Cleaning</h3>
            <button type="button" class="btn back btn-secondary"><a asp-action="Index">Back</a></button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 card-body">
            <form asp-action="Create" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="CustomerId" class="control-label"></label>
                        @Html.DropDownListFor(q => q.CustomerId, new SelectList(Model.CustomerList, "Value", "Text"),
                        "Select Customer Name",
                        new { @class = "form-control" })
                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="dateCleaning"></label>
                        <input type="Name" asp-for="dateCleaning" class="form-control" id="dateCleaning"
                            placeholder="dateCleaning">
                    </div>

                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="PropertyId" class="control-label"></label>
                        @Html.DropDownListFor(q => q.PropertyId, new SelectList(Model.PropertyList, "Value", "Text"),
                        "Select Property",
                        new { @class = "form-control" })
                        <span asp-validation-for="PropertyId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Description"></label>
                        <input type="Name" asp-for="Description" class="form-control" id="Description"
                            placeholder="Description">
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <select id="Status" asp-for="Status" asp-items="@AMS.Utility.Helper.GetYesNoDropDown()"
                            class="form-control">
                            <option value="">Select Paid or Not</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group ">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Add New Loan</button>
                </div>
            </form>
        </div>
    </div>

</div>


@section Scripts{
<script>
    $(function () {
        $(".datepicker").datepicker({
            dateFomat: "yy-mm-dd"
        });

    });
    // Add the following code if you want the name of the file appear on select
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });

    $(function () {

        $("#LoanType").change(function () {

            var val1 = $(this).val();
            var result = "";
            switch (val1) {

                case "personal":
                    result = "25%";
                    break;
                case "home":
                    result = "10%";
                    break;
                case "vehicle":
                    result = "15%";
                    break;
            }
            $("#InterestRate").val(result);
        });
    });

</script>
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
