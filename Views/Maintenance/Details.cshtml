@model AMS.Models.EditMaintenanceVM

<h4>Maintenance Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control"  disabled="disabled"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaintenanceTypeId" class="control-label"></label>
                <select asp-for="MaintenanceTypeId" class="form-control" asp-items="ViewBag.MaintenanceTypeId" disabled="disabled"></select>
                <span asp-validation-for="MaintenanceTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId" disabled="disabled"></select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PropertyId" class="control-label"></label>
                <select asp-for="PropertyId" class="form-control" asp-items="ViewBag.PropertyId" disabled="disabled"></select>
                <span asp-validation-for="PropertyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select id="Status" asp-for="Status" asp-items="@AMS.Utility.Helper.GetYesNoDropDown()"
                    class="form-control" disabled="disabled">
                    <option value="">Select Paid or Not</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
@{
await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
