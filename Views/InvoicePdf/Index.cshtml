    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<h4>Invoice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="invoice-form" class="ui form" asp-action="GenerateInvoice">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
